extends ../layout

block content
  .admin-header
    h1 Add New Product

  .card
    form(method="POST", action="/admin/products/add")
      .form-row.full
        .form-group
          label(for="name") Product Name
          input#name(type="text", name="name", placeholder="Enter product name", required)

      .form-row
        .form-group
          label(for="price") Price ($)
          input#price(type="number", name="price", placeholder="0.00", step="0.01", required)
        .form-group
          label(for="originalPrice") Original Price ($)
          input#originalPrice(type="number", name="originalPrice", placeholder="0.00", step="0.01")

      .form-row
        .form-group
          label(for="stock") Stock Quantity
          input#stock(type="number", name="stock", placeholder="0", value="0")
        .form-group
          label(for="rating") Rating (0-5)
          input#rating(type="number", name="rating", placeholder="4.6", min="0", max="5", step="0.1")

      .form-row
        .form-group
          label(for="reviewCount") Review Count
          input#reviewCount(type="number", name="reviewCount", placeholder="128", min="0")
        .form-group
          label(for="category") Category
          select#category(name="category", required)
            option(value="") Select a category
            option(value="Electronics") Electronics
            option(value="Clothing") Clothing
            option(value="Accessories") Accessories
            option(value="Shoes") Shoes
            option(value="Other") Other

      .form-row
        .form-group
          label(for="image") Image URL
          input#image(type="text", name="image", placeholder="/images/jacket.jpg")
        .form-group
          label(for="colors") Colors (comma separated)
          input#colors(type="text", name="colors", placeholder="#111827, #2563eb, #e5e7eb")

      .form-row.full
        .form-group
          label(for="highlights") Highlights (comma separated)
          textarea#highlights(name="highlights", placeholder="Free shipping, 2 year warranty, Lightweight build", style="min-height: 90px;")

      .form-row.full
        .form-group
          label(for="description") Description
          textarea#description(name="description", placeholder="Enter detailed product description", style="min-height: 150px;")

      .form-row.full
        .form-group
          label(for="inStock") Product Status
          select#inStock(name="inStock")
            option(value="true") In Stock
            option(value="false") Out of Stock

      .form-row.full(style="gap: 1rem;")
        button.btn(type="submit", style="flex: 1;") Add Product
        a.btn.btn-outline(href="/admin/products", style="flex: 1; text-align: center;") Cancel
