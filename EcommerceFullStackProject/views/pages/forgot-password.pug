extends ../layout

block content
  .auth-page
    .auth-shell(data-stagger="90")
      .auth-left(data-reveal="up")
        h1.auth-hero-title Forgot Password?
        p.auth-hero-sub Enter your account email and we will send a secure reset link.
        .auth-perks
          .perk(data-reveal="fade") Reset link expires automatically
          .perk(data-reveal="fade") Existing password stays active until reset
          .perk(data-reveal="fade") Email is not disclosed if no account exists

      .auth-card(data-reveal="scale")
        h2.auth-title Reset Password
        p.auth-subtitle Receive a password reset link by email

        if flash
          .flash(class=flash.type)= flash.text

        form.auth-form(action="/forgot-password" method="POST" autocomplete="off")
          .auth-field
            label(for="email") Email Address
            input#email(type="email" name="email" placeholder="your@email.com" required autocomplete="email")

          button.auth-submit(type="submit") Send Reset Link

        p.auth-bottom
          a(href="/login") Back to Login
