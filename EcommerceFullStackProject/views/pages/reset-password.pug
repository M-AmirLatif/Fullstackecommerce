extends ../layout

block content
  .auth-page
    .auth-shell(data-stagger="90")
      .auth-left(data-reveal="up")
        h1.auth-hero-title Set New Password
        p.auth-hero-sub Choose a strong password for your account. This reset link is time-limited.
        .auth-perks
          .perk(data-reveal="fade") Minimum 6 characters
          .perk(data-reveal="fade") Old reset links expire automatically
          .perk(data-reveal="fade") You will sign in again after reset

      .auth-card(data-reveal="scale")
        h2.auth-title Create New Password
        p.auth-subtitle Enter and confirm your new password

        if flash
          .flash(class=flash.type)= flash.text

        form.auth-form(action="/reset-password" method="POST" autocomplete="off")
          input(type="hidden" name="token" value=token)

          .auth-field
            label(for="password") New Password
            input#password(type="password" name="password" placeholder="Enter new password" required autocomplete="new-password")

          .auth-field
            label(for="confirmPassword") Confirm Password
            input#confirmPassword(type="password" name="confirmPassword" placeholder="Re-enter new password" required autocomplete="new-password")

          button.auth-submit(type="submit") Update Password

        p.auth-bottom
          a(href="/login") Back to Login
